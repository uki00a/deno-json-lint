{
  "exclude": ["tmp"],
  "lint": {
    "rules": { "include": ["no-console"] },
    "exclude": ["generated", "testdata"]
  },
  "fmt": { "exclude": ["generated", "testdata"] },
  "permissions": {
    "default": { "read": ["deno.json"] },
    "tools:typegen": {
      "net": ["raw.githubusercontent.com"],
      "sys": ["cpus"],
      "read": ["tmp"],
      "write": ["tmp", "generated"],
      "env": [
        "CI",
        "TERM",
        "TEST_PSEUDOMAP",
        "VERBOSE",
        "npm_package_name",
        "_nodeLRUCacheForceNoSymbol"
      ]
    }
  },
  "tasks": {
    "check": {
      "dependencies": ["check:deno.json", "check:lint", "typecheck"]
    },
    "check:deno.json": "deno run --permission-set src/cli.ts",
    "check:lint": "deno lint && deno fmt --check",
    "typecheck": "deno check tools src",
    "test": "deno test --permission-set tests",
    "tools:typegen": "deno run --permission-set=tools:typegen tools/typegen.ts"
  },
  "test": {
    "permissions": {
      "run": ["deno"],
      "read": ["testdata"]
    }
  },
  "imports": {
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "json-schema-to-typescript": "npm:json-schema-to-typescript@^15.0.4",
    "jsonc-parser": "npm:jsonc-parser@^3.3.1",
    "lines-and-columns": "npm:lines-and-columns@^2.0.4",
    "string-argv": "npm:string-argv@^0.3.2"
  },
  "minimumDependencyAge": 1440
}
